<div class="container">
<% if @user.errors.any? %>
  <%= @user.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
  <div class="row">
    <h2>User info</h2>
    <%= form_with model:@user do |f| %>
    <label for="user_name">Name</label>
      <%= f.text_field :name, class: "form-control" %><br>
    <label for="user_profile_image">Image</label>
      <%= f.file_field :profile_image, class: "form-control-file" %><br>
    <label for="user_introduction">Introduction</label>
      <%= f.text_area :introduction, class: "form-control" %><br>
      <%= f.submit "Update User", class: "btn btn-secondary" %>
    <% end %>
  </div>
</div>